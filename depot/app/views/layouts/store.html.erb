<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN"
                      "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html>
<head>
  <title>Pragprog Books Online Store</title>
<!-- START:stylesheet -->
  <%= stylesheet_link_tag "depot", :media => "all" %><!-- <label id="code.slt"/> -->
<!-- END:stylesheet -->
<%= javascript_include_tag :defaults %>
</head>
<body id="store">
  <div id="banner">
    <%= image_tag("logo.png") %>
    <%= @page_title || "Pragmatic Bookshelf" %><!-- <label id="code.depot.e.title"/> -->
  </div>
  <div id="columns">
    <div id="side">
      <% if @cart %>
      <% hidden_div_if(@cart.items.empty?, :id => "cart") do %>
      <%= render(:partial => "cart", :object => @cart) %>
      <% end %>
      <% end %>

      <a href="http://www....">Home</a><br />
      <a href="http://www..../faq">Questions</a><br />
      <a href="http://www..../news">News</a><br />
      <a href="http://www..../contact">Contact</a><br />
      <a href="#"><%=h Time.now %></a><br /><br />

      <% if session[:user_id] %>
      <div>
        <%= link_to '注文', :controller => 'orders' %><br />
        <%= link_to '商品', :controller => 'products' %><br />
        <%= link_to 'ユーザ', :controller => 'users' %><br /><br />
        <%= link_to 'ログアウト', :controller => 'admin', :action => 'logout' %><br />
      </div>
      <% end %>

    </div>
    <div id="main">
      <% if flash[:notice] %>
      <div id="notice"><%= flash[:notice] %></div>
      <% end %>
      <div>
        <% if session[:counter] > 5 %>
        <%= pluralize(session[:counter], "visit") %>, thanks!
        <% end %>
      </div>
      <%= yield :layout %><!-- <label id="code.depot.e.include"/> -->
    </div>
  </div>
</body>
</html>
